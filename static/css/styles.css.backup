/* ==========================================
   Modern OCR Workspace - Complete Redesign
   Light & Dark Theme with Animations
   ========================================== */

:root {
    color-scheme: light;
    
    /* Modern Color Palette - Light Theme */
    --bg-primary: #f8fafc;
    --bg-secondary: #f1f5f9;
    --surface: #ffffff;
    --surface-elevated: #ffffff;
    --surface-hover: #f8fafc;
    
    /* Primary Colors - Modern Blue-Green */
    --primary-50: #ecfdf5;
    --primary-100: #d1fae5;
    --primary-200: #a7f3d0;
    --primary-300: #6ee7b7;
    --primary-400: #34d399;
    --primary-500: #10b981;
    --primary-600: #059669;
    --primary-700: #047857;
    --primary: var(--primary-600);
    --primary-hover: var(--primary-700);
    --primary-light: var(--primary-100);
    
    /* Accent Colors - Purple */
    --accent-50: #faf5ff;
    --accent-100: #f3e8ff;
    --accent-200: #e9d5ff;
    --accent-300: #d8b4fe;
    --accent-400: #c084fc;
    --accent-500: #a855f7;
    --accent-600: #9333ea;
    --accent: var(--accent-500);
    --accent-hover: var(--accent-600);
    --accent-light: var(--accent-100);
    
    /* Text Colors */
    --text-primary: #0f172a;
    --text-secondary: #475569;
    --text-tertiary: #94a3b8;
    --text-inverse: #ffffff;
    
    /* Border & Dividers */
    --border-color: #e2e8f0;
    --border-light: #f1f5f9;
    --border-strong: #cbd5e1;
    --divider: rgba(15, 23, 42, 0.08);
    
    /* Shadows - Layered & Modern */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    --shadow-glow: 0 0 20px rgba(16, 185, 129, 0.3);
    
    /* Glassmorphism */
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(255, 255, 255, 0.2);
    --glass-blur: blur(10px);
    
    /* Status Colors */
    --success: #10b981;
    --success-bg: #d1fae5;
    --success-text: #065f46;
    --warning: #f59e0b;
    --warning-bg: #fef3c7;
    --warning-text: #92400e;
    --error: #ef4444;
    --error-bg: #fee2e2;
    --error-text: #991b1b;
    --info: #3b82f6;
    --info-bg: #dbeafe;
    --info-text: #1e40af;
    
    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #10b981 0%, #059669 100%);
    --gradient-accent: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
    --gradient-hero: linear-gradient(135deg, #10b981 0%, #3b82f6 100%);
    --gradient-bg: linear-gradient(180deg, #f8fafc 0%, #e0f2fe 100%);
    
    /* Animation Timings */
    --transition-fast: 150ms;
    --transition-base: 250ms;
    --transition-slow: 350ms;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
    
    /* Typography */
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
    --font-display: 'Inter', sans-serif;
}

:root[data-theme="dark"] {
    color-scheme: dark;
    
    /* Dark Theme Colors */
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --surface: #1e293b;
    --surface-elevated: #334155;
    --surface-hover: #293548;
    
    /* Primary Colors - Brighter for dark mode */
    --primary-500: #34d399;
    --primary-600: #10b981;
    --primary-700: #059669;
    --primary: var(--primary-500);
    --primary-hover: var(--primary-600);
    --primary-light: rgba(52, 211, 153, 0.15);
    
    /* Accent Colors */
    --accent-400: #c084fc;
    --accent-500: #a855f7;
    --accent-600: #9333ea;
    --accent: var(--accent-400);
    --accent-hover: var(--accent-500);
    --accent-light: rgba(192, 132, 252, 0.15);
    
    /* Text Colors */
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-tertiary: #64748b;
    --text-inverse: #0f172a;
    
    /* Border & Dividers */
    --border-color: #334155;
    --border-light: #293548;
    --border-strong: #475569;
    --divider: rgba(255, 255, 255, 0.1);
    
    /* Shadows - Deeper for dark mode */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6), 0 10px 10px -5px rgba(0, 0, 0, 0.4);
    --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
    --shadow-glow: 0 0 30px rgba(52, 211, 153, 0.4);
    
    /* Glassmorphism */
    --glass-bg: rgba(30, 41, 59, 0.7);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-blur: blur(10px);
    
    /* Status Colors - Adjusted for dark mode */
    --success: #34d399;
    --success-bg: rgba(52, 211, 153, 0.15);
    --success-text: #6ee7b7;
    --warning: #fbbf24;
    --warning-bg: rgba(251, 191, 36, 0.15);
    --warning-text: #fcd34d;
    --error: #f87171;
    --error-bg: rgba(248, 113, 113, 0.15);
    --error-text: #fca5a5;
    --info: #60a5fa;
    --info-bg: rgba(96, 165, 250, 0.15);
    --info-text: #93c5fd;
    
    /* Gradients */
    --gradient-primary: linear-gradient(135deg, #34d399 0%, #10b981 100%);
    --gradient-accent: linear-gradient(135deg, #c084fc 0%, #a855f7 100%);
    --gradient-hero: linear-gradient(135deg, #34d399 0%, #60a5fa 100%);
    --gradient-bg: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
}

/* ==========================================
   Base Styles & Reset
   ========================================== */

*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    scroll-behavior: smooth;
}

body {
    margin: 0;
    min-height: 100vh;
    background: var(--gradient-bg);
    color: var(--text-primary);
    font-family: var(--font-display);
    font-size: 1rem;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    transition: background var(--transition-base) var(--ease-smooth),
                color var(--transition-base) var(--ease-smooth);
}

/* Screen Reader Only */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
    margin: 0;
    color: var(--text-primary);
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: -0.02em;
}

h1 {
    font-size: 2.5rem;
    background: var(--gradient-hero);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.6s var(--ease-smooth);
}

h2 {
    font-size: 1.875rem;
    margin-bottom: 1rem;
}

h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
}

h4 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
}

p {
    margin: 0 0 1rem;
    color: var(--text-secondary);
}

a {
    color: var(--primary);
    text-decoration: none;
    transition: color var(--transition-fast) var(--ease-smooth);
}

a:hover {
    color: var(--primary-hover);
}

a:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-radius: 4px;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes scaleIn {
    from {
        opacity: 0;
        transform: scale(0.9);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

@keyframes shimmer {
    0% {
        background-position: -1000px 0;
    }
    100% {
        background-position: 1000px 0;
    }
}

/* ==========================================
   Header & Navigation
   ========================================== */

.app-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 1000;
    gap: 1.5rem;
    animation: fadeInDown 0.5s var(--ease-smooth);
    box-shadow: var(--shadow-sm);
}

.app-logo {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-shrink: 0;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 12px;
    background: var(--gradient-primary);
    color: var(--text-inverse);
    transition: transform var(--transition-base) var(--ease-bounce),
                box-shadow var(--transition-base) var(--ease-smooth);
}

.app-logo:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: var(--shadow-glow);
}

.app-logo:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 3px;
}

.app-logo__icon {
    font-size: 1.5rem;
    animation: pulse 2s infinite;
}

.nav-toggle {
    display: none;
    background: var(--surface);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 0.5rem;
    font-size: 1.5rem;
    cursor: pointer;
    transition: all var(--transition-fast) var(--ease-smooth);
}

.nav-toggle:hover {
    background: var(--surface-hover);
    transform: scale(1.05);
}

.main-nav {
    flex: 1 1 auto;
    display: flex;
    justify-content: center;
    min-width: 0;
}

.main-nav ul {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
    align-items: center;
    background: var(--surface);
    border-radius: 12px;
    padding: 0.5rem;
    box-shadow: var(--shadow-sm);
}

.main-nav a {
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    color: var(--text-secondary);
    font-weight: 600;
    font-size: 0.938rem;
    transition: all var(--transition-fast) var(--ease-smooth);
    position: relative;
    overflow: hidden;
}

.main-nav a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-fast) var(--ease-smooth);
    z-index: -1;
}

.main-nav a:hover {
    color: var(--text-primary);
    background: var(--surface-hover);
    transform: translateY(-1px);
}

.main-nav a.is-active {
    color: var(--text-inverse);
    background: var(--gradient-primary);
    box-shadow: var(--shadow-md);
}

.main-nav a.is-active::before {
    opacity: 1;
}

/* Account Actions */
.account-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    flex: 0 0 auto;
    margin-left: auto;
}

.account-actions__user {
    font-weight: 600;
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    background: var(--surface);
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

/* Modern Buttons */
.chip-button {
    border: none;
    border-radius: 10px;
    padding: 0.625rem 1.25rem;
    font-weight: 600;
    font-size: 0.938rem;
    cursor: pointer;
    background: var(--gradient-primary);
    color: var(--text-inverse);
    transition: all var(--transition-base) var(--ease-smooth);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    box-shadow: var(--shadow-md);
    position: relative;
    overflow: hidden;
}

.chip-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width var(--transition-slow) var(--ease-smooth),
                height var(--transition-slow) var(--ease-smooth);
}

.chip-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.chip-button:hover::before {
    width: 300px;
    height: 300px;
}

.chip-button:active {
    transform: translateY(0);
}

.chip-button--ghost {
    background: var(--surface);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
}

.chip-button--ghost:hover {
    background: var(--surface-hover);
    border-color: var(--border-strong);
}

.chip-button--accent {
    background: var(--gradient-accent);
    color: var(--text-inverse);
}

/* Theme Toggle */
.theme-toggle {
    margin-right: 0.5rem;
}

.theme-toggle__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border: 1px solid var(--border-color);
    border-radius: 10px;
    background: var(--surface);
    color: var(--text-primary);
    font-size: 0.938rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base) var(--ease-smooth);
    box-shadow: var(--shadow-sm);
}

.theme-toggle__button:hover,
.theme-toggle__button:focus-visible {
    background: var(--surface-hover);
    border-color: var(--primary);
    transform: scale(1.02);
    box-shadow: var(--shadow-md);
}

.theme-toggle__icon {
    font-size: 1.125rem;
    line-height: 1;
    transition: transform var(--transition-base) var(--ease-bounce);
}

.theme-toggle__button:hover .theme-toggle__icon {
    transform: rotate(15deg) scale(1.1);
}

.theme-toggle__label {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.75rem;
    font-weight: 700;
}

.theme-toggle__button[data-theme="dark"] .theme-toggle__icon--light {
    opacity: 0.4;
    transform: scale(0.9);
}

.theme-toggle__button[data-theme="light"] .theme-toggle__icon--dark {
    opacity: 0.4;
    transform: scale(0.9);
}

/* ==========================================
   Modern Button System
   ========================================== */

.primary-button,
.secondary-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 12px;
    padding: 0.875rem 1.75rem;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    overflow: hidden;
    transition: all var(--transition-base) var(--ease-smooth);
    outline: none;
    z-index: 1;
    border: none;
}

.primary-button {
    background: var(--gradient-primary);
    color: var(--text-inverse);
    box-shadow: var(--shadow-lg);
}

.primary-button::before {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--gradient-accent);
    opacity: 0;
    transition: opacity var(--transition-base) var(--ease-smooth);
    z-index: -1;
}

.primary-button:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: var(--shadow-xl), var(--shadow-glow);
}

.primary-button:hover::before {
    opacity: 1;
}

.primary-button:active {
    transform: translateY(-1px) scale(1);
}

.primary-button:focus-visible {
    box-shadow: var(--shadow-xl), 0 0 0 4px var(--primary-light);
}

.secondary-button {
    background: var(--surface);
    color: var(--text-primary);
    border: 2px solid var(--border-color);
    box-shadow: var(--shadow-md);
}

.secondary-button::before {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-base) var(--ease-smooth);
    z-index: -1;
}

.secondary-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
    color: var(--primary);
}

.secondary-button:active {
    transform: translateY(0);
}

.secondary-button:focus-visible {
    box-shadow: var(--shadow-lg), 0 0 0 4px var(--primary-light);
}

/* ==========================================
   Content Area & Layout
   ========================================== */

.app-content {
    width: min(1400px, 94%);
    margin: 2.5rem auto 4rem;
    flex: 1;
    animation: fadeInUp 0.6s var(--ease-smooth);
}

/* Toast Notifications */
.toast-stack {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
    position: fixed;
    top: 5rem;
    right: 2rem;
    z-index: 9999;
    max-width: 400px;
}

.toast {
    padding: 1rem 1.25rem;
    border-radius: 12px;
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid var(--border-color);
    border-left: 4px solid var(--primary);
    box-shadow: var(--shadow-xl);
    animation: slideInRight 0.4s var(--ease-smooth);
    font-weight: 500;
}

.toast--error {
    border-left-color: var(--error);
    background: var(--error-bg);
}

.toast--success {
    border-left-color: var(--success);
    background: var(--success-bg);
}

.toast--warning {
    border-left-color: var(--warning);
    background: var(--warning-bg);
}

.toast--info {
    border-left-color: var(--info);
    background: var(--info-bg);
}

/* Section Headers */
.section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    gap: 2rem;
    animation: fadeInUp 0.6s var(--ease-smooth);
}

.section-header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.section-header p {
    max-width: 640px;
    color: var(--text-secondary);
    font-size: 1.125rem;
    margin-top: 0.5rem;
}

/* Badges */
.badge {
    padding: 0.5rem 1rem;
    border-radius: 10px;
    background: var(--gradient-accent);
    color: var(--text-inverse);
    font-weight: 700;
    font-size: 0.875rem;
    letter-spacing: 0.025em;
    text-transform: uppercase;
    box-shadow: var(--shadow-md);
    animation: scaleIn 0.4s var(--ease-bounce);
}

/* ==========================================
   Card System
   ========================================== */

.card,
.sidebar-card {
    background: var(--surface);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-color);
    transition: all var(--transition-base) var(--ease-smooth);
    animation: scaleIn 0.5s var(--ease-smooth);
}

.card:hover,
.sidebar-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-2px);
}

.narrow-card {
    max-width: min(600px, 100%);
    margin: 0 auto;
}

.card-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
}

.card h2,
.sidebar-card h2 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
}

/* ==========================================
   Modern Form System
   ========================================== */

.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem 2rem;
}

.form-field {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    color: var(--text-primary);
}

.form-field label {
    font-weight: 600;
    font-size: 0.938rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
}

.form-field.full-width {
    grid-column: 1 / -1;
}

.form-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-top: 1rem;
}

/* Input Fields */
.input-control,
input.input-control,
select.input-control,
textarea.input-control,
.form-field input[type="text"],
.form-field input[type="email"],
.form-field input[type="password"],
.form-field input[type="number"],
.form-field input[type="search"],
.form-field select,
.form-field textarea {
    width: 100%;
    border-radius: 10px;
    border: 2px solid var(--border-color);
    padding: 0.875rem 1rem;
    font-size: 1rem;
    font-family: inherit;
    background: var(--surface);
    color: var(--text-primary);
    transition: all var(--transition-fast) var(--ease-smooth);
    box-shadow: var(--shadow-sm);
}

.input-control:focus,
.form-field input:focus,
.form-field select:focus,
.form-field textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: var(--shadow-md), 0 0 0 4px var(--primary-light);
    transform: translateY(-1px);
}

.input-control:hover,
.form-field input:hover,
.form-field select:hover,
.form-field textarea:hover {
    border-color: var(--border-strong);
}

.input-control::placeholder,
.form-field input::placeholder,
.form-field textarea::placeholder {
