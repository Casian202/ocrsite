.info-card ol,
.info-card ul {
    padding-left: 1.5rem;
    color: var(--text-secondary);
}

.info-card li {
    margin-bottom: 0.75rem;
    line-height: 1.6;
}

/* ==========================================
   Library & Folders
   ========================================== */

.library-layout {
    display: grid;
    gap: 2rem;
    grid-template-columns: minmax(300px, 360px) 1fr;
}

.library-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.folder-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.folder-card {
    display: flex;
    gap: 1.25rem;
    align-items: center;
    padding: 1.5rem;
    border-radius: 16px;
    background: var(--surface);
    border: 2px solid var(--border-color);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-base) var(--ease-smooth);
    color: var(--text-primary);
    text-decoration: none;
    position: relative;
    overflow: hidden;
}

.folder-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity var(--transition-base) var(--ease-smooth);
    z-index: 0;
}

.folder-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: var(--shadow-xl);
}

.folder-card:hover::before {
    opacity: 1;
}

.folder-icon {
    font-size: 2.5rem;
    position: relative;
    z-index: 1;
    transition: transform var(--transition-base) var(--ease-bounce);
}

.folder-card:hover .folder-icon {
    transform: scale(1.1) rotate(5deg);
}

.folder-meta {
    position: relative;
    z-index: 1;
}

.folder-meta h3 {
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
}

.folder-card--mint::before { 
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.2));
}
.folder-card--sage::before { 
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(59, 130, 246, 0.2));
}
.folder-card--aqua::before { 
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.1), rgba(34, 211, 238, 0.2));
}
.folder-card--sunset::before { 
    background: linear-gradient(135deg, rgba(251, 146, 60, 0.1), rgba(251, 146, 60, 0.2));
}
.folder-card--lavender::before { 
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(168, 85, 247, 0.2));
}
.folder-card--amber::before { 
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.2));
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table th,
.data-table td {
    padding: 0.75rem 0.5rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
}

.table-actions {
    display: flex;
    gap: 0.75rem;
}

.preview-container {
    height: 70vh;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--border);
    margin-bottom: 1rem;
    background: var(--surface);
    display: flex;
    flex-direction: column;
}

.preview-container iframe {
    width: 100%;
    height: 100%;
    border: none;
    background: var(--surface);
    flex: 1 1 auto;
    display: block;
    min-height: 320px;
}

.preview-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.preview-hint {
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: var(--muted);
}

.admin-console {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: minmax(220px, 280px) 1fr;
}

.admin-settings-card {
    margin-bottom: 1.5rem;
}

.admin-settings-card .form-actions {
    justify-content: flex-start;
}

.admin-console__list ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.75rem;
}

.admin-console__list li {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.6rem 0.9rem;
    border-radius: 12px;
    background: var(--surface-muted);
}

.admin-console__list li.is-active {
    outline: 2px solid var(--primary);
}

.auth-wrapper {
    display: flex;
    justify-content: center;
    padding: 3rem 0;
}

.auth-card {
    max-width: 420px;
    width: 100%;
    background: var(--surface);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: var(--shadow);
}

.auth-secondary {
    margin-top: 1.5rem;
    text-align: center;
    color: var(--muted);
}

.auth-secondary a {
    font-weight: 600;
}

.footer,
.app-footer {
    text-align: center;
    padding: 1.5rem;
    color: var(--muted);
}

@media (max-width: 960px) {
    .app-header {
        flex-wrap: wrap;
        gap: 0.6rem;
        padding: 0.6rem 1.15rem;
    }

    .main-nav {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: flex-end;
    }

    .main-nav ul {
        display: none;
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: var(--surface);
        padding: 0.75rem;
        border-radius: 16px;
        box-shadow: var(--shadow);
        flex-direction: column;
        min-width: 200px;
        gap: 0.35rem;
    }

    .main-nav.is-open ul {
        display: flex;
    }

    .nav-toggle {
        display: block;
        font-size: 1.25rem;
    }

    .main-nav a {
        font-size: 0.9rem;
        padding: 0.35rem 0.6rem;
    }

    .library-layout,
    .admin-console {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 720px) {
    .app-header {
        padding: 0.6rem 1rem;
    }

    .account-actions {
        width: 100%;
        justify-content: flex-end;
    }

    .app-header .chip-button {
        padding: 0.3rem 0.7rem;
        font-size: 0.9rem;
    }

    .account-actions__user {
        font-size: 0.9rem;
    }

    .preview-container {
        height: min(65vh, 480px);
    }

    .preview-actions,
    .job-actions,
    .document-actions,
    .form-actions {
        flex-direction: column;
        align-items: stretch;
    }

    .preview-actions > *,
    .job-actions > *,
    .document-actions > *,
    .form-actions > * {
        flex: 1 1 100%;
        width: 100%;
    }

    .toggle-collection,
    .toggle-switch-list--grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 540px) {
    .app-header {
        flex-direction: column;
        align-items: stretch;
    }

    .app-logo {
        justify-content: flex-start;
    }

    .account-actions {
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .app-content {
        width: min(640px, 94%);
    }

}

